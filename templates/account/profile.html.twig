{% extends "base.html.twig" %}

{% block title %}Modification du profil{% endblock %}

{% block body %}

<div class="container mb-5">
    <h1 class="text-center my-5">MODIFIER MON PROFIL - 
    {% if app.user.picture is null %}
    Améliorez votre visibilité, ajoutez un avatar !
    {% else %}
    <img src="{{ app.user.picture }}" alt="Avatar de {{app.user.fullName}}" class="avatar avatar-header border border-light">
    {% endif %}
    
    </h1>

    {{form_start(form)}}

        <div class="col mb-5">
            <div class="alert alert-light p-4">
                <h2 class="alert-heading text-center">Informations générales</h2>
                <div class="text-center mt-3 mb-2">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        {{form_row(form.firstName)}}
                    </div>
                    <div class="col-md-3">
                        {{form_row(form.lastName)}}
                    </div>
                    <div class="col-md-6">
                        {{form_row(form.email)}}
                    </div>
                </div>
                {{form_row(form.picture)}}
            </div>
        </div>
        {# <div class="text-center my-4">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div> #}
        <div class="col">
            <div class="alert alert-light p-4">
                <h2 class="alert-heading text-center">Présentation</h2>
                <div class="text-center mt-3 mb-2">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </div>
                {{form_row(form.introduction)}}
                {{form_row(form.description)}}

                <hr>
                <p>Si vous avez terminé vos modifications, vous pouvez les sauvegarder</p>
                <button type="submit" class="btn btn-success mt-2 mb-4">
                    <i class="fas fa-check"></i>
                    <b>ENREGISTRER</b></button>

            </div>
        </div>

    {{form_end(form)}}
</div>

{% endblock %}