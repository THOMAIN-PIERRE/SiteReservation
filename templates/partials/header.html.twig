{# Barre de navigation #}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
{% endblock %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-success sticky-top">
            <a class="navbar-brand m-2" href="{{ path('welcome') }}"><img src="/img/logo-loc-appart3.png" alt="logo Lac'Appart" class="logo-mini rounded"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('homepage') }}" style="font-size: 1rem; font-family: 'Permanent Marker', cursive;"><b>Accueil</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('ads_index') }}" style="font-size: 1rem; font-family: 'Permanent Marker', cursive;"><b>Annonces</b></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a href="#" id="accountDropdownLink" class="nav-link dropdown-toggle text-light" data-toggle="dropdown">
                            <img src="{{app.user.picture}}" alt="Avatar de {{app.user.fullName}}" class="avatar avatar-header border border-light"> <b>{{app.user.fullName}}</b>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                            {# <a href="{{path('ads_create')}}" class="dropdown-item">Créer une annonce</a> #}
                            <a href="{{path('ads_create')}}" class="dropdown-item">Devenir hôte</a>
                            <div class="dropdown-divider"></div>
                            <a href="{{path('account_index')}}" class="dropdown-item">Mon compte</a>
                            <a href="{{path('account_bookings')}}" class="dropdown-item">Mes réservations</a>
                            <a href="{{path('account_profile')}}" class="dropdown-item">Modifier mon profil</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{path('admin_account_login')}}" class="dropdown-item">Administration</a>
                            {% endif %}
                            <div class="dropdown-divider"></div>
                            <a href="{{path('account_logout')}}" class="dropdown-item">Déconnexion</a>
                        </div>
                    </li>
                {% else %}
                    <li class="nav-item dropdown">
                        <a href="#" id="accountDropdownLink" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-user fa-2x text-light"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                            <a href="{{path('account_login')}}" class="dropdown-item"><i class="fas fa-sign-in-alt"></i> Connexion</a>
                            <div class="dropdown-divider"></div>
                            <a href="{{path('account_register')}}" class="dropdown-item"><i class="fas fa-address-card"></i> Inscription</a>
                        </div>
                    </li>
                {% endif %}
                </ul>
            </div>
        </nav>

        {% for label, messages in app.flashes %}

        <div class="container">
            <div class="alert alert-{{label}}">
                {% for message in messages %}
                    <p>{{message | raw}}</p>
                {% endfor %}
            </div>
        </div>
            
        {% endfor %}