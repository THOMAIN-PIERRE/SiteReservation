{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
    
        <div class="container">
            <div class="row">
                <div class="col table-responsive mt-5">
                    <a href="{{ path('admin_category_new') }}" class="btn btn-success mb-5" style="float: right"><strong><i class="fas fa-plus"></i> AJOUTER</strong></a>
                    <h2 class="mb-5">CATEGORIES DE LOGEMENTS</h2>
                    <table class="table table-hover mt-3">
                        <thead>

                            <tr>
                                <th class="text-center align-middle">#</th>
                                <th class="text-center align-middle">Nom</th>
                                <th class="text-center align-middle">Description</th>
                                <th class="text-center align-middle">Couleur</th>
                                <th class="text-center align-middle">Action</th>
                            </tr>
                        <thead>
                        {# {% set i = 1 %} #}
                        {% for category in pagination.category %}
                                <tr>
                                    <td class="text-center align-middle">{{category.id}}</td>
                                    <td class="text-center align-middle"><b>{{category.name}}</b></td>
                                    <td class="text-center align-middle align-items-center">{{category.description}}</td>
                                    <td class="text-center align-middle mt-5 text-dark" style="background-color: {{category.color}};">{{category.color}}</td>
                                    <td class="text-center align-middle">
                                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-success mr-2 mb-2"><i class="fas fa-edit" aria-hidden="true"></i></a>
                                        <a href="{{ path('admin_category_delete', {'id': category.id}) }}"class="btn btn-danger mr-2 mb-2"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            {# {% set i = i+1 %} #}
                        {% endfor %}
                    </table>

                    {{ pagination.display() }}

                </div>
            </div>
        </div>
    </div>

 {% endblock %}  
