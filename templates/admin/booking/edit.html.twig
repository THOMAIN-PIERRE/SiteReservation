{% extends "admin/base.html.twig" %}

{% block title %}Modifier la réservation n° {{booking.id}}{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-5">Modifier la réservation n° {{booking.id}}</h1>
</div>

<div class="container alert alert-light">

    {{form_start(form)}}
        <div class="row">
            <div class="col-md-8">
                {{form_row(form.ad)}}
            </div>
            <div class="col-md-4">
                {{form_row(form.booker)}}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                {{form_row(form.startDate)}}                  
            </div>
            <div class="col-md-6">
                {{form_row(form.endDate)}}     
            </div>
        </div>
        <div class="col mt-4">
            {{form_row(form.comment)}}
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success mt-4 mb-4">
                <i class="fas fa-check"></i>
                <b>Enregistrer les modifications</b>
            </button>
        </div>
    {{form_end(form)}}
</div>


{% endblock %}