{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des rôles{% endblock %}

{% block body %}
    
        <div class="container">
            <div class="row">
                <div class="col table-responsive mt-5">
                    <a href="{{ path('admin_role_new') }}" class="btn btn-success mb-5" style="float: right"><strong><i class="fas fa-plus"></i> AJOUTER</strong></a>
                    <h2 class="mb-5">LES ROLES UTILISATEURS DISPONIBLES</h2>
                    <table class="table table-hover mt-3">
                        <thead>
                            <tr>
                                <th class="text-center align-middle">#</th>
                                <th class="text-center align-middle">Rôle</th>
                                <th class="text-center align-middle">Description</th>
                                <th class="text-center align-middle">Action</th>
                            </tr>
                        <thead>
                        {% for role in pagination.role %}
                                <tr>
                                    <td class="text-center align-middle">{{role.id}}</td>
                                    <td class="text-center align-middle"><b>{{role.title}}</b></td>
                                    <td class="text-center align-middle align-items-center">{{role.description}}</td>
                                    <td class="text-center align-middle">
                                        <a href="{{ path('admin_role_edit', {'id': role.id}) }}" class="btn btn-success mr-2 mb-2"><i class="fas fa-edit" aria-hidden="true"></i></a>
                                        <a href="{{ path('admin_role_delete', {'id': role.id}) }}"class="btn btn-danger mr-2 mb-2"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                        {% endfor %}
                    </table>

                    {{ pagination.display() }}

                </div>
            </div>
        </div>
    </div>

 {% endblock %}  
